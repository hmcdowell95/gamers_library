<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@game.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @game do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :rating %>
    <%= f.text_field :rating %><br>
    <%= f.label :system %>
    <%= f.collection_select :system_id, System.all, :id, :name %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.submit %>
<% end %>

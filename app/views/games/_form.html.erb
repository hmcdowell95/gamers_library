<%= form_for @game do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :rating %>
    <%= f.text_field :rating %><br>
    <%= f.label :system %>
    <%= f.collection_select :system_id, System.all, :id, :name %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.submit %>
<% end %>

<h1><%= @user.username %></h1>
<br>
<h1>Systems</h1>
<% @user.systems.each do |x| %>
    <p><%= x.name %> Company: <%= x.company %></p>
<% end %>
<% if @user.id == session[:user_id] %>
    <%= link_to "Edit Systems", systems_path %><br>
    <%= link_to "Add Games", "/games/new" %>
<% end %>

<br>
<h2><%= link_to "Game Library", user_games_path(@user) %></h2>
<br>
<% if @user.id == session[:user_id] %>
    <footer><%= link_to "Delete Account", "/users/#{session[:user_id]}", method: :delete %></footer>
<% end %>
<%= form_for @user do |f| %>
    <%= f.error_messages %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.error_message_on(:username) %><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br>
    <%= f.submit %>
<% end %>
<% if session[:user_id] %>
    <h2>Search for games in the search bar or check some links below</h2>
    <h2><%= link_to "All Games", games_path %></h2>
    <h2><%= link_to "Systems", systems_path %></h2>
    <h2><%= link_to "Profile", user_path(session[:user_id]) %></h2>
